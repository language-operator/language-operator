# frozen_string_literal: true

source 'https://rubygems.org'

# Note: langop gem is pre-installed in the parent langop/ruby image
# We don't declare it here because it's system-installed, not from rubygems.org
# The ruby command will find it automatically via the system gem path

# Agent-specific dependencies for autonomous execution
gem 'rufus-scheduler', '~> 3.9'  # For scheduled/event-driven execution
gem 'concurrent-ruby', '~> 1.3'  # For concurrent task execution

group :development do
  gem 'rubocop', '~> 1.60'
  gem 'rubocop-performance', '~> 1.20'
  gem 'yard', '~> 0.9.37'
end
